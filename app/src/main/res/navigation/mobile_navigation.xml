<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kotlinmovieapp.ui.movie_list.MovieListFragment"
        android:label="@string/title_movie_list"
        tools:layout="@layout/fragment_movie_list" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.kotlinmovieapp.ui.movie_rank.MovieRankFragment"
        android:label="@string/title_movie_rank"
        tools:layout="@layout/fragment_movie_rank" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.kotlinmovieapp.ui.filmmaker.FilmmakerFragment"
        android:label="@string/title_filmmaker_list"
        tools:layout="@layout/fragment_filmmaker_list" />
</navigation>